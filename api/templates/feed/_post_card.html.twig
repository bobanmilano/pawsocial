<div class="card shadow-sm mb-4 border-0" id="post-{{ post.id }}">
    <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center pt-3 pb-0">
        <div class="d-flex align-items-center mb-3">
            {# Avatar Selection #}
            {% if post.postedByAnimal %}
                {% if post.postedByAnimal.imageName %}
                     <img src="{{ asset('/uploads/animals/' ~ post.postedByAnimal.imageName) }}" class="rounded-circle me-3" style="width: 40px; height: 40px; object-fit: cover;" alt="{{ post.postedByAnimal.name }}">
                {% else %}
                     {% set emoji = post.postedByAnimal.species == 'dog' ? 'üê∂' : (post.postedByAnimal.species == 'cat' ? 'üê±' : 'üêæ') %}
                     <div class="rounded-circle bg-light d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px; font-size: 1.2rem;">{{ emoji }}</div>
                {% endif %}
            {% else %}
                {# User Avatar #}
                {% if post.author.imageName %}
                    <img src="{{ asset('/uploads/avatars/' ~ post.author.imageName) }}" class="rounded-circle me-3" style="width: 40px; height: 40px; object-fit: cover;" alt="{{ post.author.firstName }}">
                {% else %}
                    <div class="rounded-circle bg-light d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">üë§</div>
                {% endif %}
            {% endif %}
            
            <div class="lh-sm">
                {% if post.postedByAnimal %}
                    <!-- Posted by Animal -->
                    <h6 class="mb-0 fw-bold">
                         <a href="{{ path('app_user_profile', {id: post.author.id}) }}" class="text-decoration-none text-dark">
                            {{ post.postedByAnimal.name }} üêæ
                         </a>
                    </h6>
                    <small class="text-muted" style="font-size: 0.85rem;">via {{ post.author.firstName }}</small>
                {% else %}
                    <!-- Posted by User -->
                    <h6 class="mb-0 fw-bold">
                        <a href="{{ path('app_user_profile', {id: post.author.id}) }}" class="text-decoration-none text-dark">
                            {{ post.author.firstName }} {{ post.author.lastName }}
                        </a>
                    </h6>
                {% endif %}
                <div class="text-muted small">{{ post.createdAt|date('M d, Y ‚Ä¢ H:i') }}
                    {% if not post.showInFeed %}
                        <span class="badge bg-secondary ms-1" style="font-size: 0.7em;">üîí Profile Only</span>
                    {% endif %}
                </div>
            </div>
        </div>
        
        <div class="dropdown">
            <button class="btn btn-link text-muted p-0 text-decoration-none" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                <span class="fs-4">‚ãÆ</span>
            </button>
            <ul class="dropdown-menu dropdown-menu-end border-0 shadow">
                {% if app.user == post.author %}
                     <li>
                        <form method="post" action="{{ path('app_post_delete', {'id': post.id}) }}" onsubmit="return confirm('Are you sure you want to delete this post?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                            <button type="submit" class="dropdown-item text-danger">üóëÔ∏è Delete</button>
                        </form>
                    </li>
                {% else %}
                    <li>
                        {# Link to Report functionality (to be implemented) #}
                        <a class="dropdown-item" href="{{ path('app_report_post', {'id': post.id}) }}">‚ö†Ô∏è Report</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>

    <div class="card-body bg-white">
        <p class="card-text mb-3" style="white-space: pre-wrap;">{{ post.content }}</p>
        
        {% if post.imageName %}
            <div class="mb-3 rounded overflow-hidden shadow-sm">
                <img src="{{ asset('/uploads/posts/' ~ post.imageName) }}" class="img-fluid w-100" alt="Post Image">
            </div>
        {% endif %}
        {% set videoId = post.videoId %}
        {% if videoId %}
            <div class="ratio ratio-16x9">
                <iframe src="https://www.youtube.com/embed/{{ videoId }}" title="YouTube video" allowfullscreen></iframe>
            </div>
        {% endif %}
    </div>

    <div class="card-footer bg-white">
        <div class="d-flex justify-content-between align-items-center">
            
            {# Turbo Frame for Like Button #}
            <turbo-frame id="post_like_section_{{ post.id }}">
                {% set isLiked = false %}
                {% if app.user %}
                    {% for like in post.postLikes %}
                        {% if like.user == app.user %}
                            {% set isLiked = true %}
                        {% endif %}
                    {% endfor %}
                {% endif %}

                <form action="{{ path('app_post_like', {id: post.id}) }}" method="post" class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('like' ~ post.id) }}">
                    <button type="submit" class="btn btn-link text-decoration-none p-0 me-3 {{ isLiked ? 'text-danger' : 'text-muted' }}">
                        <i class="bi {{ isLiked ? 'bi-heart-fill' : 'bi-heart' }}"></i>
                        <span>{{ post.postLikes|length }}</span>
                    </button>
                </form>
            </turbo-frame>

            {# Comment Toggle / Count #}
            <button class="btn btn-link text-decoration-none text-muted p-0" 
                    type="button" data-bs-toggle="collapse" data-bs-target="#comments-{{ post.id }}">
                <i class="bi bi-chat"></i> <span id="post_comment_count_{{ post.id }}">{{ post.comments|length }}</span> Comments
            </button>
            
            {# Share Button #}
            <button class="btn btn-link text-decoration-none text-muted p-0"
                    data-controller="share"
                    data-share-title-value="Post by {{ post.author.firstName }}"
                    data-share-text-value="{{ post.content|striptags|slice(0, 100) }}..."
                    data-share-url-value="{{ url('app_post_show', {id: post.id}) }}"
                    data-action="click->share#share">
                <i class="bi bi-share"></i> Share
            </button>
        </div>

        {# Collapsible Comments Section #}
        <div class="collapse mt-3" id="comments-{{ post.id }}">
            {% include 'feed/_comments_section.html.twig' %}
        </div>
    </div>
</div>
