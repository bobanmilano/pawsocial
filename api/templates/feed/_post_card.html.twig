<div class="card glass-card mb-4 animate-fade-in" id="post-{{ post.id }}">
    <div class="card-header bg-transparent border-0 d-flex justify-content-between align-items-center pt-4 pb-0 px-4">
        <div class="d-flex align-items-center mb-0">
            {# Avatar Selection #}
            {% if post.postedByAnimal %}
                <a href="{{ path('app_user_profile', {id: post.postedByAnimal.userAccount.id}) }}" class="text-decoration-none">
                    <div class="position-relative me-3 hover-scale">
                        {% if post.postedByAnimal.imageName %}
                            <img src="{{ asset('/uploads/animals/' ~ post.postedByAnimal.imageName) }}" class="rounded-circle shadow-sm border border-2 border-white" style="width: 50px; height: 50px; object-fit: cover;" alt="{{ post.postedByAnimal.name }}">
                        {% else %}
                            {% set emoji = post.postedByAnimal.species == 'dog' ? 'üê∂' : (post.postedByAnimal.species == 'cat' ? 'üê±' : 'üêæ') %}
                            <div class="rounded-circle bg-white shadow-sm d-flex align-items-center justify-content-center border border-2 border-white" style="width: 50px; height: 50px; font-size: 1.5rem;">{{ emoji }}</div>
                        {% endif %}
                        <div class="position-absolute bottom-0 end-0 bg-white rounded-circle shadow-sm d-flex align-items-center justify-content-center border border-1 border-light" style="width: 20px; height: 20px; font-size: 0.6rem;">üë§</div>
                    </div>
                </a>
            {% else %}
                {# User Avatar #}
                <a href="{{ path('app_user_profile', {id: post.author.id}) }}" class="text-decoration-none">
                    <div class="me-3 hover-scale">
                        {% if post.author.imageName %}
                            <img src="{{ asset('/uploads/avatars/' ~ post.author.imageName) }}" class="rounded-circle shadow-sm border border-2 border-white" style="width: 50px; height: 50px; object-fit: cover;" alt="{{ post.author.firstName }}">
                        {% else %}
                            <div class="rounded-circle bg-white shadow-sm d-flex align-items-center justify-content-center border border-2 border-white" style="width: 50px; height: 50px; font-size: 1.2rem;">üë§</div>
                        {% endif %}
                    </div>
                </a>
            {% endif %}
            
            <div class="lh-sm">
                {% if post.postedByAnimal %}
                    <h6 class="mb-0 fw-bold">
                         <a href="{{ path('app_user_profile', {id: post.postedByAnimal.userAccount.id}) }}" class="text-decoration-none text-dark hover-opacity">
                            {{ post.postedByAnimal.name }} üêæ
                         </a>
                    </h6>
                    <small class="text-muted opacity-75" style="font-size: 0.75rem;">via <a href="{{ path('app_user_profile', {id: post.author.id}) }}" class="text-decoration-none text-muted hover-opacity">{{ post.author.firstName }}</a></small>
                {% else %}
                    <h6 class="mb-0 fw-bold">
                        <a href="{{ path('app_user_profile', {id: post.author.id}) }}" class="text-decoration-none text-dark hover-opacity">
                            {{ post.author.firstName }} {{ post.author.lastName }}
                        </a>
                    </h6>
                {% endif %}
                <div class="text-muted opacity-50 small" style="font-size: 0.7rem;">{{ post.createdAt|date('M d, Y ‚Ä¢ H:i') }}
                    {% if not post.showInFeed %}
                        <span class="badge bg-light text-muted ms-1" style="font-size: 0.8em; border: 1px solid rgba(0,0,0,0.05);">üîí Profile Only</span>
                    {% endif %}
                </div>
            </div>
        </div>
        
        <div class="dropdown">
            <button class="btn btn-link text-muted p-2 text-decoration-none rounded-circle hover-bg-light" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-three-dots-vertical"></i>
            </button>
            <ul class="dropdown-menu dropdown-menu-end border-0 shadow-lg glass-card">
                {% if app.user == post.author %}
                     <li>
                        <form method="post" action="{{ path('app_post_delete', {'id': post.id}) }}" onsubmit="return confirm('Are you sure you want to delete this post?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                            <button type="submit" class="dropdown-item text-danger d-flex align-items-center">
                                <i class="bi bi-trash3 me-2"></i> Delete Post
                            </button>
                        </form>
                    </li>
                {% else %}
                    <li>
                        <a class="dropdown-item d-flex align-items-center" href="{{ path('app_report_post', {'id': post.id}) }}">
                            <i class="bi bi-flag me-2"></i> Report
                        </a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>

    <div class="card-body bg-transparent px-4 pt-3 pb-2">
        <p class="card-text mb-3 lead-sm" style="white-space: pre-wrap; font-size: 1.05rem; line-height: 1.6;">{{ post.content }}</p>
        
        {% if post.imageName %}
            <div class="mb-3 rounded-4 overflow-hidden shadow-sm border border-light">
                <img src="{{ asset('/uploads/posts/' ~ post.imageName) }}" class="img-fluid w-100" alt="Post Image" style="max-height: 600px; object-fit: cover;">
            </div>
        {% endif %}
        {% set videoId = post.videoId %}
        {% if videoId %}
            <div class="ratio ratio-16x9 rounded-4 overflow-hidden shadow-sm border border-light mb-3">
                <iframe src="https://www.youtube.com/embed/{{ videoId }}" title="YouTube video" allowfullscreen></iframe>
            </div>
        {% endif %}
    </div>

    <div class="card-footer bg-transparent border-0 px-4 pb-4 pt-0">
        <div class="d-flex justify-content-between align-items-center border-top pt-3 opacity-90">
            {# Like Button #}
            <turbo-frame id="like_post_{{ post.id }}">
                <form action="{{ path('app_post_like', {id: post.id}) }}" method="post" class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('like' ~ post.id) }}">
                    {% set isLiked = app.user and post.isLikedByUser(app.user) %}
                    <button type="submit" class="btn btn-link text-decoration-none text-muted p-2 rounded-pill hover-bg-light d-flex align-items-center gap-2 btn-like {{ isLiked ? 'active animate-heart-beat' : '' }}" style="transition: var(--transition-soft);">
                        <i class="bi {{ isLiked ? 'bi-heart-fill text-danger' : 'bi-heart' }} fs-5"></i>
                        <span class="fw-bold">{{ post.postLikes|length }}</span>
                    </button>
                </form>
            </turbo-frame>

            {# Comment Toggle / Count #}
            <button class="btn btn-link text-decoration-none text-muted p-2 rounded-pill hover-bg-light d-flex align-items-center gap-2" 
                    type="button" data-bs-toggle="collapse" data-bs-target="#comments-{{ post.id }}" style="transition: var(--transition-soft);">
                <i class="bi bi-chat fs-5"></i> <span id="post_comment_count_{{ post.id }}" class="fw-bold">{{ post.comments|length }}</span>
            </button>

            {# Share Button #}
            <button class="btn btn-link text-decoration-none text-muted p-2 rounded-pill hover-bg-light d-flex align-items-center gap-2"
                    data-controller="share"
                    data-share-title-value="Post by {{ post.author.firstName }}"
                    data-share-text-value="{{ post.content|striptags|slice(0, 100) }}..."
                    data-share-url-value="{{ url('app_post_show', {id: post.id}) }}"
                    data-action="click->share#share"
                    style="transition: var(--transition-soft);">
                <i class="bi bi-share fs-5"></i> <span class="d-none d-sm-inline fw-bold">Share</span>
            </button>
        </div>

        {# Collapsible Comments Section #}
        <div class="collapse" id="comments-{{ post.id }}">
            <div class="mt-3 p-3 rounded-4 bg-light bg-opacity-50 border border-light shadow-inner">
                {% include 'feed/_comments_section.html.twig' %}
            </div>
        </div>
    </div>
</div>
