{# templates/feed/_form.html.twig #}
<turbo-frame id="new_post_form">
    {% if form %}
        <div class="card glass-card mb-5 border-0">
            <div class="card-body p-4">
                <h5 class="card-title fw-bold mb-4 d-flex align-items-center gap-2">
                    <span class="p-2 rounded-circle bg-primary bg-opacity-10 text-primary">‚úçÔ∏è</span>
                    Share a moment
                </h5>
                {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_widget(form.content, {'attr': {
                            'class': 'form-control border-0 bg-light bg-opacity-50 p-3 rounded-4 focus-shadow-none', 
                            'rows': 3, 
                            'placeholder': "What's your pet up to?",
                            'style': 'resize: none; font-size: 1.1rem;'
                        }}) }}
                    </div>
                    
                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <div class="d-flex gap-2">
                             <button type="button" class="btn btn-light rounded-pill px-3 py-2 border-0 shadow-sm small fw-semibold" data-bs-toggle="collapse" data-bs-target="#media-fields">
                                <i class="bi bi-camera shadow-sm me-2"></i> Media
                            </button>
                        </div>
                        <button type="submit" class="btn btn-premium rounded-pill px-5 shadow">Post üöÄ</button>
                    </div>

                    <div class="collapse" id="media-fields">
                        <div class="mt-4 p-4 rounded-4 bg-light bg-opacity-30 border border-light">
                            <div class="mb-3">
                                {{ form_label(form.imageFile, 'üì∑ Upload Image', {'label_attr': {'class': 'form-label fw-bold small text-muted text-uppercase'}}) }}
                                {{ form_widget(form.imageFile, {'attr': {'class': 'form-control form-control-sm rounded-3'}}) }}
                            </div>
                            <div class="d-flex align-items-center my-3">
                                <hr class="flex-grow-1 opacity-25">
                                <span class="mx-3 text-muted small fw-bold">OR</span>
                                <hr class="flex-grow-1 opacity-25">
                            </div>
                            <div class="mb-0">
                                {{ form_label(form.videoUrl, 'üé• YouTube Link', {'label_attr': {'class': 'form-label fw-bold small text-muted text-uppercase'}}) }}
                                {{ form_widget(form.videoUrl, {'attr': {'class': 'form-control form-control-sm rounded-3', 'placeholder': 'https://youtube.com/...'}}) }}
                            </div>
                        </div>
                    </div>
                    
                    <div class="mt-4 pt-3 border-top border-light border-opacity-50">
                        <div class="form-check form-switch">
                            {{ form_widget(form.showInFeed, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(form.showInFeed, 'Show in Global Pack', {'label_attr': {'class': 'form-check-label small fw-semibold text-muted'}}) }}
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    {% endif %}
</turbo-frame>
