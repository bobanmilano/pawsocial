{% extends 'base.html.twig' %}

{% block title %}My Pack{% endblock %}

{% block body %}
    <div class="profile-header text-center mb-5 position-relative">
        {# Cover Image Section #}
        {% if profileUser.coverImageName %}
            <div class="cover-image-container position-relative mb-5" style="height: 450px; overflow: hidden; border-radius: 0 0 15px 15px;">
                <picture>
                    <source media="(max-width: 575px)" srcset="{{ asset('/uploads/covers/' ~ profileUser.coverImageName) | imagine_filter('cover_mobile') }}">
                    <source media="(max-width: 991px)" srcset="{{ asset('/uploads/covers/' ~ profileUser.coverImageName) | imagine_filter('cover_tablet') }}">
                    <img src="{{ asset('/uploads/covers/' ~ profileUser.coverImageName) | imagine_filter('cover_desktop') }}" 
                         alt="Cover Image" 
                         class="w-100 h-100" 
                         style="object-fit: cover;">
                </picture>
            </div>
            {# Adjust Avatar Position to overlap cover (75% of 120px = 90px) #}
            <div class="position-relative" style="margin-top: -90px;">
        {% else %}
             <div class="cover-placeholder bg-secondary mb-3" style="height: 200px; border-radius: 0 0 15px 15px; opacity: 0.8;"></div>
             <div class="position-relative" style="margin-top: -90px;">
        {% endif %}
        {% if profileUser.imageName %}
            <img src="{{ asset('/uploads/avatars/' ~ profileUser.imageName) }}" class="rounded-circle mb-3 shadow" style="width: 120px; height: 120px; object-fit: cover; border: 4px solid white;" alt="Avatar">
        {% else %}
            <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center mx-auto mb-3 shadow" style="width: 120px; height: 120px; font-size: 3rem; border: 4px solid white;">üë§</div>
        {% endif %}
        
        <h1 class="h2">{{ profileUser.firstName ? profileUser.firstName ~ ' ' ~ profileUser.lastName : profileUser.email }}</h1>
        <p class="text-muted mb-3">{{ profileUser.organizationName ?? (profileUser.accountType|capitalize ~ ' Account') }}</p>
        
        <a href="{{ path('app_edit_profile') }}" class="btn btn-outline-primary btn-sm rounded-pill px-4">Edit Profile</a>
    </div>

    <div class="pack-section">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="h4 border-start border-4 border-primary ps-3">Your Pack üêæ</h2>
            <a href="{{ path('app_add_animal') }}" class="btn btn-primary rounded-pill">
                + Add Member
            </a>
        </div>

        {% if animals is empty %}
            <div class="alert alert-light border text-center py-5">
                <h4>Your pack is empty! üï∏Ô∏è</h4>
                <p>Add your first pet to start building your profile.</p>
                <a href="{{ path('app_add_animal') }}" class="btn btn-success mt-2">Add Pet</a>
            </div>
        {% else %}
            <div class="row g-4">
                {% for animal in animals %}
                    <div class="col-md-4 mb-3">
                        <div class="card h-100 shadow-sm hover-shadow transition-all border-0">
                            <!-- Helper to get the right placeholder emoji -->
                            {% set emoji = animal.species == 'dog' ? 'üê∂' : (animal.species == 'cat' ? 'üê±' : 'üêæ') %}
                            
                            {% if animal.imageName %}
                                <img src="{{ asset('/uploads/animals/' ~ animal.imageName) }}" class="card-img-top" style="height: 250px; object-fit: cover;" alt="{{ animal.name }}">
                            {% else %}
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center text-muted" style="height: 250px; font-size: 4rem;">
                                    {{ emoji }}
                                </div>
                            {% endif %}
                            
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start">
                                    <h5 class="card-title fw-bold">{{ animal.name }}</h5>
                                    {% if animal.gender %}
                                        <span class="badge bg-light text-dark border">{{ animal.gender|capitalize }}</span>
                                    {% endif %}
                                </div>
                                <p class="card-text text-muted small mb-2">
                                    {{ animal.species|capitalize }} ‚Ä¢ {{ animal.breed ?? 'Unknown Breed' }}
                                </p>
                                <p class="small">
                                    {% if animal.birthDate %}
                                        {{ animal.birthDate|date('Y') }} ({{ "now"|date('Y') - animal.birthDate|date('Y') }}y)
                                    {% else %}
                                        Age Unknown
                                    {% endif %}
                                </p>
                                {% if animal.isAdoptable %}
                                    <div class="badge bg-success w-100 py-2">‚ú® Up for Adoption</div>
                                {% endif %}
                            </div>
                            <div class="card-footer bg-transparent border-top-0 pt-0 pb-3">
                                <a href="{{ path('app_edit_animal', {id: animal.id}) }}" class="btn btn-outline-secondary w-100 btn-sm">Manage Profile</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
    <div class="posts-section mt-5">
        <h2 class="h4 border-start border-4 border-info ps-3 mb-4">Your Moments üì∏</h2>

        {% if posts is empty %}
            <div class="text-center text-muted py-5">
                <p>You haven't posted any moments yet.</p>
                <a href="{{ path('app_feed') }}" class="btn btn-outline-primary btn-sm rounded-pill">Share a moment</a>
            </div>
        {% else %}
            <div class="row">
                <div class="col-md-8 mx-auto">
                    {% for post in posts|sort((a, b) => b.createdAt <=> a.createdAt) %}
                        {% include 'feed/_post_card.html.twig' with {'post': post} %}
                    {% endfor %}
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
