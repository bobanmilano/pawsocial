{% extends 'base.html.twig' %}

{% block title %}My Pack{% endblock %}

{% block body %}
    <div class="profile-header text-center mb-5 position-relative">
        {# Cover Image Section #}
        {% if profileUser.coverImageName %}
            <div class="cover-image-container position-relative mb-5" style="height: 450px; overflow: hidden; border-radius: 0 0 15px 15px;">
                <picture>
                    <source media="(max-width: 575px)" srcset="{{ asset('/uploads/covers/' ~ profileUser.coverImageName) | imagine_filter('cover_mobile') }}">
                    <source media="(max-width: 991px)" srcset="{{ asset('/uploads/covers/' ~ profileUser.coverImageName) | imagine_filter('cover_tablet') }}">
                    <img src="{{ asset('/uploads/covers/' ~ profileUser.coverImageName) | imagine_filter('cover_desktop') }}" 
                         alt="Cover Image" 
                         class="w-100 h-100" 
                         style="object-fit: cover;">
                </picture>
            </div>
            {# Adjust Avatar Position to overlap cover (75% of 120px = 90px) #}
            <div class="position-relative" style="margin-top: -90px;">
        {% else %}
             <div class="cover-placeholder bg-secondary mb-3" style="height: 200px; border-radius: 0 0 15px 15px; opacity: 0.8;"></div>
             <div class="position-relative" style="margin-top: -90px;">
        {% endif %}
        {% if profileUser.imageName %}
            <img src="{{ asset('/uploads/avatars/' ~ profileUser.imageName) }}" class="rounded-circle mb-3 shadow" style="width: 120px; height: 120px; object-fit: cover; border: 4px solid white;" alt="Avatar">
        {% else %}
            <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center mx-auto mb-3 shadow" style="width: 120px; height: 120px; font-size: 3rem; border: 4px solid white;">üë§</div>
        {% endif %}
        
        <h1 class="h2">{{ profileUser.firstName ? profileUser.firstName ~ ' ' ~ profileUser.lastName : profileUser.email }}</h1>
        <p class="text-muted mb-2">{{ profileUser.organizationName ?? (profileUser.accountType|capitalize ~ ' Account') }}</p>

        <!-- Follow Button Area -->
        <div class="mb-3">
             {% include 'follow/_button.html.twig' with {'user': profileUser} %}
        </div>
        
        {% if app.user == profileUser %}
            <a href="{{ path('app_edit_profile') }}" class="btn btn-outline-primary btn-sm rounded-pill px-4">Edit Profile</a>
        {% endif %}
    </div>

    {# 2. Pets Section (Horizontal Row) #}
    <div class="container mb-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="fw-bold">My Pets üêæ</h4>
            {% if app.user == profileUser %}
                <a href="{{ path('app_add_animal') }}" class="btn btn-sm btn-outline-primary rounded-pill">
                    + Add Pet
                </a>
            {% endif %}
        </div>

        {% if animals is empty %}
            <div class="alert alert-light border text-center py-4">
                <p class="mb-2">No pets added yet.</p>
                {% if app.user == profileUser %}
                    <a href="{{ path('app_add_animal') }}" class="btn btn-sm btn-primary">Add Pet</a>
                {% endif %}
            </div>
        {% else %}
            {# Horizontal Scrollable Row for Pets #}
            <div class="d-flex overflow-auto pb-3 gap-3" style="scrollbar-width: thin;">
                {% for animal in animals %}
                    <div class="card shadow-sm border-0 flex-shrink-0" style="width: 280px;">
                        {% set emoji = animal.species == 'dog' ? 'üê∂' : (animal.species == 'cat' ? 'üê±' : 'üêæ') %}
                        
                        <div class="position-relative">
                            {% if animal.imageName %}
                                <img src="{{ asset('/uploads/animals/' ~ animal.imageName) }}" class="card-img-top" style="height: 180px; object-fit: cover;" alt="{{ animal.name }}">
                            {% else %}
                                <div class="bg-light d-flex align-items-center justify-content-center text-muted" style="height: 180px; font-size: 3rem;">
                                    {{ emoji }}
                                </div>
                            {% endif %}
                            
                            {% if animal.isAdoptable %}
                                <div class="position-absolute top-0 end-0 m-2 badge bg-success shadow-sm">Adopt Me</div>
                            {% endif %}
                        </div>

                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-1">
                                <h5 class="card-title fw-bold mb-0">{{ animal.name }}</h5>
                                <small class="text-muted">{{ animal.gender|capitalize }}</small>
                            </div>
                            <p class="card-text small text-muted mb-2">
                                {{ animal.species|capitalize }} ‚Ä¢ {{ animal.breed ?? 'Unknown' }}
                            </p>
                            
                            {% if app.user == profileUser %}
                                <a href="{{ path('app_edit_animal', {id: animal.id}) }}" class="btn btn-outline-secondary btn-sm w-100 mt-2">Manage</a>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>

    {# 3. Main Content & Sidebar (2/3 + 1/3) #}
    <div class="row">
        {# Left Column: Main Stream (2/3) #}
        <div class="col-lg-8">
            {% if posts is empty %}
                <div class="text-center text-muted py-5 border rounded bg-light">
                    <p>No moments shared yet.</p>
                    {% if app.user == profileUser %}
                        <a href="{{ path('app_feed') }}" class="btn btn-outline-primary btn-sm rounded-pill">Share a moment</a>
                    {% endif %}
                </div>
            {% else %}
                {% for post in posts|sort((a, b) => b.createdAt <=> a.createdAt) %}
                    {% include 'feed/_post_card.html.twig' with {'post': post} %}
                {% endfor %}
            {% endif %}
        </div>

        {# Right Column: Sidebar (1/3) #}
        <div class="col-lg-4">
            {# Personal Cards / Info Section #}
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title fw-bold mb-3">About</h5>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2"><i class="bi bi-geo-alt me-2 text-muted"></i> {{ profileUser.location ?? 'Unknown Location' }}</li>
                        <li class="mb-2"><i class="bi bi-calendar3 me-2 text-muted"></i> Joined {{ profileUser.createdAt|date('M Y') }}</li>
                        {% if profileUser.website %}
                             <li class="mb-2"><i class="bi bi-link-45deg me-2 text-muted"></i> <a href="{{ profileUser.website }}" target="_blank" class="text-decoration-none">{{ profileUser.website }}</a></li>
                        {% endif %}
                    </ul>
                </div>
            </div>

            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title fw-bold mb-3">Pack Members</h5>
                     {# Followers / Friends Placeholder #}
                     <div class="d-flex flex-wrap gap-2">
                         {% for follower in profileUser.followers|slice(0, 6) %}
                             <a href="#" title="{{ follower.firstName }}" class="text-decoration-none">
                                {# Avatar logic would go here #}
                                <div class="bg-light rounded-circle d-flex align-items-center justify-content-center border" style="width: 40px; height: 40px;">
                                    {{ follower.firstName|slice(0,1) }}
                                </div>
                             </a>
                         {% else %}
                            <p class="text-muted small">No followers yet.</p>
                         {% endfor %}
                     </div>
                </div>
            </div>
            
            {# Photos / Media Placeholder #}
             <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title fw-bold mb-3">Photos</h5>
                    <div class="row g-1">
                        {# Just a placeholder grid #}
                        <div class="col-4"><div class="bg-light ratio ratio-1x1 rounded"></div></div>
                        <div class="col-4"><div class="bg-light ratio ratio-1x1 rounded"></div></div>
                        <div class="col-4"><div class="bg-light ratio ratio-1x1 rounded"></div></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
