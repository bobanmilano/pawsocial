{% extends 'base.html.twig' %}

{% block title %}Edit Profile{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <a href="{{ path('app_my_pack') }}" class="btn btn-link mb-3">&larr; Back to Dashboard</a>
                
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h1 class="card-title mb-4">Settings</h1>
                        
                        {# Theme Switcher #}
                        <div class="mb-5 p-3 bg-light rounded border">
                            <h5 class="mb-3">üé® App Appearance</h5>
                            <div class="d-flex gap-2 flex-wrap">
                                <a href="{{ path('app_switch_theme', {theme: 'soft-paw'}) }}" class="btn btn-outline-warning {{ app.session.get('active_theme') == 'soft-paw' ? 'active' : '' }}" data-turbo="false">
                                    üç¶ Soft Paw
                                </a>
                                <a href="{{ path('app_switch_theme', {theme: 'sunny-park'}) }}" class="btn btn-outline-danger {{ app.session.get('active_theme') == 'sunny-park' ? 'active' : '' }}" data-turbo="false">
                                    ‚òÄÔ∏è Sunny Park
                                </a>
                                <a href="{{ path('app_switch_theme', {theme: 'modern-clay'}) }}" class="btn btn-outline-success {{ app.session.get('active_theme') == 'modern-clay' ? 'active' : '' }}" data-turbo="false">
                                    üåø Modern Clay
                                </a>
                                <a href="{{ path('app_switch_theme', {theme: 'dark-mode'}) }}" class="btn btn-outline-dark {{ app.session.get('active_theme') == 'dark-mode' ? 'active' : '' }}" data-turbo="false">
                                    üåë Dark Mode
                                </a>
                                
                                {# Custom Color Trigger #}
                                <button class="btn btn-outline-primary {{ app.session.get('active_theme') == 'custom' ? 'active' : '' }}" type="button" data-bs-toggle="collapse" data-bs-target="#customColorPanel" aria-expanded="false">
                                    üé® Custom Colors
                                </button>
                            </div>
                            
                            {# Custom Color Panel #}
                            <div class="collapse mt-3 {{ app.session.get('active_theme') == 'custom' ? 'show' : '' }}" id="customColorPanel">
                                <div class="card card-body border-0 shadow-sm bg-white">
                                    <form action="{{ path('app_save_custom_colors') }}" method="post" data-turbo="false">
                                        <div class="row align-items-end">
                                            <div class="col-md-5 mb-3">
                                                <label for="primary_color" class="form-label fw-bold">Primary Brand Color</label>
                                                <input type="color" class="form-control form-control-color w-100" id="primary_color" name="primary_color" value="{{ app.user.primaryColor ?? '#FFB347' }}" title="Choose your color">
                                            </div>
                                            <div class="col-md-5 mb-3">
                                                <label for="secondary_color" class="form-label fw-bold">Accent Color</label>
                                                <input type="color" class="form-control form-control-color w-100" id="secondary_color" name="secondary_color" value="{{ app.user.secondaryColor ?? '#FFD1DC' }}" title="Choose your color">
                                            </div>
                                            <div class="col-md-2 mb-3">
                                                <button type="submit" class="btn btn-primary w-100 h-100" style="min-height: 38px;">Save</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <h5 class="mb-3">Edit Profile Data</h5>
                        {{ form_start(form) }}
                          <div class="row">
                                {# Cover Image Upload #}
                                <div class="col-12 mb-4" data-controller="image-preview">
                                    <label class="form-label fw-bold">Cover Image</label>
                                    <div class="position-relative mb-2">
                                        {% if app.user.coverImageName %}
                                           <img src="{{ asset('/uploads/covers/' ~ app.user.coverImageName) }}" 
                                                data-image-preview-target="preview" 
                                                class="img-fluid w-100 rounded shadow-sm" 
                                                style="height: 200px; object-fit: cover;" 
                                                alt="Cover Preview">
                                        {% else %}
                                            <div class="bg-secondary w-100 rounded d-flex align-items-center justify-content-center text-white" 
                                                 data-image-preview-target="preview"
                                                 style="height: 200px;">
                                                <span>No Cover Image</span>
                                            </div>
                                            {# Hidden image tag for preview logic if needed, or just replace the div's content/style via JS? 
                                               The simplified controller usually targets an <img> src. 
                                               Let's make sure we have an img tag available even if hidden initially, or use the existing logic check.
                                            #}
                                            <img src="#" data-image-preview-target="preview" class="img-fluid w-100 rounded shadow-sm d-none" style="height: 200px; object-fit: cover;" alt="New Cover Preview">
                                        {% endif %}
                                    </div>
                                    {{ form_widget(form.coverImageFile, {'attr': {'data-image-preview-target': 'input', 'data-action': 'change->image-preview#readURL'}}) }}
                                    {{ form_errors(form.coverImageFile) }}
                                </div>
                                
                                <div class="col-md-4 text-center mb-3" data-controller="image-preview">
                                    <label class="form-label fw-bold">Profile Picture</label>
                                    {% if app.user.imageName %}
                                        <img src="{{ asset('/uploads/avatars/' ~ app.user.imageName) }}" data-image-preview-target="preview" class="rounded-circle img-fluid mb-2" style="width: 150px; height: 150px; object-fit: cover;" alt="Avatar">
                                    {% else %}
                                        <img src="data:image/svg+xml;base64," 
                                             data-image-preview-target="preview" 
                                             class="rounded-circle img-fluid mb-2 d-none" 
                                             style="width: 150px; height: 150px; object-fit: cover;" alt="Preview">
                                        <div class="rounded-circle bg-light d-flex align-items-center justify-content-center mx-auto mb-2" style="width: 150px; height: 150px; font-size: 3rem;">üë§</div>
                                    {% endif %}
                                    
                                    {{ form_widget(form.imageFile, {'attr': {'data-image-preview-target': 'input', 'data-action': 'change->image-preview#readURL'}}) }}
                                    {{ form_errors(form.imageFile) }}
                                </div>
                                <div class="col-md-8">
                                    <h5 class="mb-3">Personal Details</h5>
                                    <div class="row">
                                        <div class="col-6">{{ form_row(form.firstName) }}</div>
                                        <div class="col-6">{{ form_row(form.lastName) }}</div>
                                    </div>
                                    {{ form_row(form.organizationName) }}
                                </div>
                            </div>
                            
                            <hr>
                            <button type="submit" class="btn btn-primary w-100">Save Changes</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
