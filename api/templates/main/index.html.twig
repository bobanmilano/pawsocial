{% extends 'base.html.twig' %}

{% block title %}Welcome to Pawsocial!{% endblock %}

{% block body %}
    <div class="hero-section text-center py-5 mb-5 animate-fade-in">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="mb-4">
                    <img src="{{ asset('images/logo-paw-rb.png') }}" alt="Pawsocial" height="120" class="animate-pulse">
                </div>
                <h1 class="display-3 fw-bold mb-3">Where the Pack Connects üêï</h1>
                <p class="lead text-muted mb-5 fs-4">Join the world's first premium social network designed exclusively for pets and the people who love them.</p>
                
                <div class="d-flex flex-wrap justify-content-center gap-3">
                    {% if not app.user %}
                        <a href="{{ path('app_register') }}" class="btn btn-premium btn-lg px-5 shadow-lg">Become a Member</a>
                        <a href="{{ path('app_login') }}" class="btn btn-white-glass btn-lg px-5">Sign In</a>
                    {% else %}
                        <a href="{{ path('app_feed') }}" class="btn btn-premium btn-lg px-5 shadow-lg">Enter the Feed</a>
                        <a href="{{ path('app_my_pack') }}" class="btn btn-white-glass btn-lg px-5">Manage My Pack</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-4 animate-fade-in" style="animation-delay: 0.1s;">
