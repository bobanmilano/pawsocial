{% extends 'base.html.twig' %}

{% block title %}Search Results{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h2 class="fw-bold mb-4 animate-fade-in">
                Search Results for <span class="text-primary">"{{ query }}"</span>
            </h2>

            {% if results is empty %}
                <div class="card glass-card border-0 p-5 text-center bg-white bg-opacity-30 animate-fade-in" style="animation-delay: 0.1s;">
                    <i class="bi bi-search fs-1 opacity-25 mb-3"></i>
                    <h5 class="fw-bold text-muted">No results found</h5>
                    <p class="text-muted small">Try searching for a name, breed, or species.</p>
                </div>
            {% else %}
                <div class="row g-4">
                    {% for user in results %}
                        <div class="col-12 animate-fade-in" style="animation-delay: {{ loop.index0 * 0.1 }}s;">
                            <a href="{{ path('app_user_profile', {id: user.id}) }}" class="text-decoration-none">
                                <div class="card glass-card border-0 shadow-sm hover-up overflow-hidden">
                                    <div class="card-body p-3 d-flex align-items-center gap-3">
                                        <div class="position-relative">
                                            {% if user.imageName %}
                                                <img src="{{ asset('/uploads/avatars/' ~ user.imageName) }}" class="rounded-circle border border-2 border-white shadow-sm" style="width: 60px; height: 60px; object-fit: cover;" alt="Avatar">
                                            {% else %}
                                                <div class="rounded-circle bg-light d-flex align-items-center justify-content-center border border-2 border-white shadow-sm" style="width: 60px; height: 60px; font-size: 1.5rem;">
                                                    {{ 'ROLE_PET' in user.roles ? 'üêæ' : 'üë§' }}
                                                </div>
                                            {% endif %}
                                        </div>
                                        <div class="flex-grow-1">
                                            <h5 class="fw-bold mb-1 text-dark">{{ user.firstName }} {{ user.lastName }}</h5>
                                            <p class="text-muted small mb-0">
                                                {% if 'ROLE_PET' in user.roles %}
                                                    <span class="badge bg-primary bg-opacity-10 text-primary rounded-pill px-2">Pet</span>
                                                    {{ user.animalProfile ? user.animalProfile.species|capitalize ~ ' ‚Ä¢ ' ~ (user.animalProfile.breed ?? 'Unknown Breed') : 'Pet Profile' }}
                                                {% else %}
                                                    <span class="badge bg-secondary bg-opacity-10 text-secondary rounded-pill px-2">Human</span>
                                                    {{ user.organizationName ?? 'Animal Lover' }}
                                                {% endif %}
                                            </p>
                                        </div>
                                        <div class="text-end">
                                            <i class="bi bi-chevron-right text-muted"></i>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
