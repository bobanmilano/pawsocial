{% extends 'base.html.twig' %}

{% block title %}Admin Messages{% endblock %}

{% block body %}
<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5 animate-fade-in">
        <h1 class="fw-bold d-flex align-items-center gap-3">
             <span class="p-3 rounded-4 bg-primary bg-opacity-10 text-primary fs-4">ðŸ“©</span>
             Feedback & Reports
        </h1>
        <a href="{{ path('app_admin_users') }}" class="btn btn-white-glass text-muted px-4 rounded-pill shadow-sm">
            <i class="bi bi-people me-2"></i> Users
        </a>
    </div>

    <div class="row g-4 animate-fade-in" style="animation-delay: 0.1s;">
        {% for msg in messages %}
            <div class="col-12 col-xl-6">
                <div class="card glass-card border-0 h-100 shadow-sm hover-up">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div class="d-flex align-items-center gap-3">
                                <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center shadow-sm" style="width: 45px; height: 45px; font-weight: 700;">
                                    {{ msg.sender.firstName|slice(0,1)|default('?') }}
                                </div>
                                <div>
                                    <h6 class="fw-bold mb-0 text-primary">{{ msg.sender.firstName ?? msg.sender.email }}</h6>
                                    <small class="text-muted" style="font-size: 0.7rem;">{{ msg.createdAt|date('M d, Y â€¢ H:i') }}</small>
                                </div>
                            </div>
                            {% if msg.relatedPost %}
                                <span class="badge bg-light text-muted border px-3 rounded-pill">Reported Post</span>
                            {% else %}
                                <span class="badge bg-light text-muted border px-3 rounded-pill">General Feedback</span>
                            {% endif %}
                        </div>
                        
                        <div class="p-3 rounded-4 bg-light bg-opacity-30 border-start border-4 border-primary mb-3">
                            <p class="mb-0 text-dark" style="line-height: 1.6;">{{ msg.message }}</p>
                        </div>

                        {% if msg.relatedPost %}
                            <div class="d-flex justify-content-end">
                                <a href="{{ path('app_feed') }}#post-{{ msg.relatedPost.id }}" class="btn btn-premium btn-sm rounded-pill px-4 py-2 hover-scale">
                                    <i class="bi bi-eye me-2"></i> Inspect Content
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="card glass-card border-0 p-5 text-center bg-white bg-opacity-30">
                    <div class="opacity-25 fs-1 mb-3">ðŸ“­</div>
                    <p class="text-muted mb-0">No active reports or messages to display.</p>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
