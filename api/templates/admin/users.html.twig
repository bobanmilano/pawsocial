{% extends 'base.html.twig' %}

{% block title %}Admin Users{% endblock %}

{% block body %}
<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5 animate-fade-in">
        <h1 class="fw-bold d-flex align-items-center gap-3">
            <span class="p-3 rounded-4 bg-primary bg-opacity-10 text-primary fs-4">üë•</span>
            User Management
        </h1>
        <a href="{{ path('app_admin_messages') }}" class="btn btn-white-glass text-muted px-4 rounded-pill shadow-sm">
            <i class="bi bi-chat-dots me-2"></i> Inbox
        </a>
    </div>

    <div class="card glass-card border-0 shadow-lg overflow-hidden animate-fade-in" style="animation-delay: 0.1s;">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="bg-light bg-opacity-50">
                        <tr>
                            <th class="ps-4 py-3 small fw-bold text-muted text-uppercase">User Identity</th>
                            <th class="py-3 small fw-bold text-muted text-uppercase">Role & Status</th>
                            <th class="py-3 small fw-bold text-muted text-uppercase text-center">Engagement</th>
                            <th class="pe-4 py-3 small fw-bold text-muted text-uppercase text-end">Management</th>
                        </tr>
                    </thead>
                    <tbody class="border-top-0">
                        {% for user in users %}
                            <tr class="transition-all hover-bg-light">
                                <td class="ps-4 py-4">
                                    <div class="d-flex align-items-center">
                                        {% if user.imageName %}
                                            <img src="{{ asset('/uploads/avatars/' ~ user.imageName) }}" class="rounded-circle me-3 shadow-sm border border-2 border-white" style="width: 45px; height: 45px; object-fit: cover;">
                                        {% else %}
                                            <div class="rounded-circle bg-white shadow-sm d-flex align-items-center justify-content-center me-3 border border-2 border-white text-muted fw-bold" style="width: 45px; height: 45px;">
                                                {{ user.firstName|slice(0,1)|default('?') }}
                                            </div>
                                        {% endif %}
                                        <div>
                                            <div class="fw-bold">{{ user.firstName ? user.firstName ~ ' ' ~ user.lastName : 'Pet Parent' }}</div>
                                            <small class="text-muted font-monospace" style="font-size: 0.75rem;">{{ user.email }}</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex flex-column gap-1">
                                        <span class="badge {{ user.accountType == 'commercial' ? 'bg-warning text-dark' : 'bg-primary bg-opacity-10 text-primary border border-primary border-opacity-25' }} rounded-pill small" style="width: fit-content;">
                                            {{ user.accountType|capitalize }}
                                        </span>
                                        <small class="fw-bold text-muted px-2">
                                            {% if 'ROLE_ADMIN_USER' in user.roles %}üëë Admin
                                            {% elseif 'ROLE_PREMIUM_USER' in user.roles %}üíé Premium
                                            {% elseif 'ROLE_GOLD_USER' in user.roles %}ü•á Gold
                                            {% elseif 'ROLE_COMMERCIAL_USER' in user.roles %}üè¢ Commercial
                                            {% else %}üë§ Standard{% endif %}
                                        </small>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <div class="d-flex justify-content-center gap-4">
                                        <div class="text-center">
                                            <div class="fw-bold">{{ user.animals|length }}</div>
                                            <div class="small text-muted text-uppercase" style="font-size: 0.6rem;">Pets</div>
                                        </div>
                                        <div class="text-center">
                                            <div class="fw-bold">{{ user.posts|length }}</div>
                                            <div class="small text-muted text-uppercase" style="font-size: 0.6rem;">Posts</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="pe-4 text-end">
                                    <div class="dropdown">
                                        <button class="btn btn-light btn-sm rounded-pill px-3 shadow-sm border-0 dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                            Modify
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end glass-card border-0 shadow-lg mt-2">
                                            <li><h6 class="dropdown-header small text-uppercase">Tier Assignment</h6></li>
                                            <li>
                                                <form action="{{ path('app_admin_change_role', {id: user.id, role: 'base'}) }}" method="post">
                                                    <button class="dropdown-item py-2">üë§ Standard Tier</button>
                                                </form>
                                            </li>
                                            <li><hr class="dropdown-divider opacity-25"></li>
                                            <li><h6 class="dropdown-header small text-uppercase">Enterprise Roles</h6></li>
                                            <li>
                                                <form action="{{ path('app_admin_change_role', {id: user.id, role: 'gold'}) }}" method="post">
                                                    <button class="dropdown-item py-2">ü•á Gold Partner</button>
                                                </form>
                                            </li>
                                            <li>
                                                <form action="{{ path('app_admin_change_role', {id: user.id, role: 'premium'}) }}" method="post">
                                                    <button class="dropdown-item py-2">üíé Premium Tier</button>
                                                </form>
                                            </li>
                                            <li><hr class="dropdown-divider opacity-25"></li>
                                            <li>
                                                <form action="{{ path('app_admin_change_role', {id: user.id, role: 'admin'}) }}" method="post" onsubmit="return confirm('Promote this user to Administrator?');">
                                                    <button class="dropdown-item py-2 text-primary fw-bold">üëë Assign Admin</button>
                                                </form>
                                            </li>
                                            <li><hr class="dropdown-divider opacity-25"></li>
                                            <li>
                                                <form action="{{ path('app_admin_ban_user', {id: user.id}) }}" method="post" onsubmit="return confirm('Change ban status for {{ user.email }}?');">
                                                    <button class="dropdown-item py-2 {{ user.isBanned ? 'text-success fw-bold' : 'text-danger' }}">
                                                        {% if user.isBanned %}
                                                            <i class="bi bi-check-circle me-2"></i> Unban Member
                                                        {% else %}
                                                            <i class="bi bi-slash-circle me-2"></i> Suspend Account
                                                        {% endif %}
                                                    </button>
                                                </form>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
