{% extends 'base.html.twig' %}

{% block title %}Report Post{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow border-0">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">⚠️ Report Post</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-light border mb-3">
                    <strong>Reported Content:</strong>
                    <p class="mb-0 text-muted fst-italic">"{{ post.content|slice(0, 100) ~ (post.content|length > 100 ? '...') }}"</p>
                    <small>by {{ post.author.firstName ?? 'User' }}</small>
                </div>

                <form method="post">
                    <div class="mb-3">
                        <label for="reason" class="form-label fw-bold">Why are you reporting this?</label>
                        <textarea name="reason" id="reason" rows="4" class="form-control" placeholder="E.g. Inappropriate content, spam, etc..." required></textarea>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_feed') }}" class="btn btn-outline-secondary">Cancel</a>
                        <button type="submit" class="btn btn-danger">Send Report</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
