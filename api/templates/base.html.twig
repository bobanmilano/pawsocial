<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Pawsocial{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>üêæ</text></svg>">
        
        {% block meta %}
            <meta property="og:title" content="Pawsocial - The Social Network for Pets">
            <meta property="og:description" content="Connect with other pet lovers and share your furry friends' moments!">
            <meta property="og:image" content="{{ absolute_url(asset('images/pawsocial-og-default.jpg')) }}"> {# Placeholder #}
            <meta property="og:type" content="website">
            <meta property="og:url" content="{{ app.request.uri }}">
        {% endblock %}
        
        {# Bootstrap 5 CSS (CDN for speed) #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        {# Bootstrap Icons #}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        
        {% block stylesheets %}
            <style>
                body { 
                    font-family: 'Inter', system-ui, -apple-system, sans-serif; 
                    background-color: #f8f9fa; /* Light gray background */
                }
                .navbar-brand { font-weight: 700; color: #6f42c1 !important; /* Pawsocial Purple */ }
                .nav-link.active { color: #6f42c1 !important; font-weight: 600; }
            </style>
            
            {# Dynamic Theme Loding #}
            {# Dynamic Theme Loading #}
            {% set activeTheme = app.session.get('active_theme') %}
            
            {% if activeTheme %}
                 {# If custom, load the dedicated neutral custom base file #}
                 <link href="{{ asset('styles/themes/' ~ activeTheme ~ '.css') }}" rel="stylesheet">
                 
                 {# Load Fonts for specific themes #}
                 {% if activeTheme == 'soft-paw' %}
                    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&display=swap" rel="stylesheet">
                 {% elseif activeTheme == 'sunny-park' %}
                    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;800&display=swap" rel="stylesheet">
                 {% endif %}
            {% endif %}
            
            {# User Custom Colors (Only active if 'custom' theme is selected) #}
            {% if app.session.get('active_theme') == 'custom' and app.user %}
                <style>
                    :root {
                        {% if app.user.primaryColor %}
                            --primary-color: {{ app.user.primaryColor }} !important;
                            --primary-hover: {{ app.user.primaryColor }} !important; 
                        {% endif %}
                        {% if app.user.secondaryColor %}
                            --secondary-color: {{ app.user.secondaryColor }} !important;
                        {% endif %}
                    }
                    
                    {% if app.user.secondaryColor %}
                        .navbar { border-bottom-color: {{ app.user.secondaryColor }} !important; }
                    {% endif %}
                </style>
            {% endif %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm mb-4">
            <div class="container">
                <a class="navbar-brand" href="{{ path('app_main') }}">
                    <img src="{{ asset('images/logo-paw-rb.png') }}" alt="Pawsocial Paw" height="40" class="d-inline-block align-text-top">
                    <img src="{{ asset('images/logo-social-rb.png') }}" alt="Pawsocial Text" height="40" class="d-inline-block align-text-top ms-1">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">

                    <ul class="navbar-nav ms-auto">
                        {% if app.user %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_my_pack') }}">üêï My Pack</a>
                            </li>
                            <!-- Admin Menu (Temporary: Visible to all logged in users for MVP) -->
                        {% if is_granted('ROLE_ADMIN_USER') %}
                            <li class="nav-item dropdown me-2">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    üõ°Ô∏è Admin
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end border-0 shadow">
                                    <li><a class="dropdown-item" href="{{ path('app_admin_messages') }}">üì© Reports & Messages</a></li>
                                    <li><a class="dropdown-item" href="{{ path('app_admin_users') }}">üë• User Management</a></li>
                                </ul>
                            </li>
                        {% endif %}

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center gap-2" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    {{ app.user.firstName ?? app.user.email }}
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                        <li><h6 class="dropdown-header">Switch Identity</h6></li>
                        
                        {# Determine Main Account and Pets #}
                        {% set isManaged = app.user.managedBy is not null %}
                        {% set mainAccount = isManaged ? app.user.managedBy : app.user %}
                        {# For main account, we can use managedAccounts directly. For pet, we need to fetch via mainAccount #}
                        {# Note: managedAccounts is a Collection, so we can iterate it #}
                        
                        {# Main Account Option #}
                        <li>
                            <a class="dropdown-item d-flex align-items-center justify-content-between {{ not isManaged ? 'active' : '' }}" 
                               href="{{ path('app_switch_user', {id: mainAccount.id}) }}">
                                <span>üë§ {{ mainAccount.firstName }} {{ isManaged ? '(Owner)' : '(You)' }}</span>
                                {% if not isManaged %}‚úì{% endif %}
                            </a>
                        </li>

                        <li><hr class="dropdown-divider"></li>
                        <li><h6 class="dropdown-header">Your Pack</h6></li>

                        {# Pets Options #}
                        {% for petUser in mainAccount.managedAccounts %}
                             {% set petAnimal = petUser.animalProfile %}
                             {% set emoji = petAnimal ? (petAnimal.species == 'dog' ? 'üê∂' : (petAnimal.species == 'cat' ? 'üê±' : 'üêæ')) : 'üêæ' %}
                            <li>
                                <a class="dropdown-item d-flex align-items-center justify-content-between {{ app.user.id == petUser.id ? 'active' : '' }}" 
                                   href="{{ path('app_switch_user', {id: petUser.id}) }}">
                                    <span>
                                        {{ emoji }} {{ petUser.firstName }}
                                    </span>
                                    {% if app.user.id == petUser.id %}‚úì{% endif %}
                                </a>
                            </li>
                        {% else %}
                             <li><span class="dropdown-item text-muted small">No pets yet</span></li>
                        {% endfor %}
                        
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="{{ path('app_edit_profile') }}">Settings</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" href="{{ path('app_logout') }}">Logout</a></li>
                    </ul>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_login') }}">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary btn-sm ms-2 text-white" href="{{ path('app_register') }}">Join the Pack</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container">
            {# Flash Messages #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            {% block body %}{% endblock %}
        </div>
    </body>
</html>
